   "source": [
    "\n",
    "<html lang=\"en\">\n",
    "<head>\n",
    "    <meta charset=\"UTF-8\">\n",
    "    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n",
    "    <title>Logical Gates Quiz</title>\n",
    "    <style>\n",
    "        .question-box {\n",
    "            border: 1px solid #ccc;\n",
    "            padding: 10px;\n",
    "            margin-bottom: 20px; /* Increased spacing between questions */\n",
    "            max-width: 300px;\n",
    "            position: relative;\n",
    "        }\n",
    "        button {\n",
    "            margin: 5px;\n",
    "            padding: 5px 10px;\n",
    "            cursor: pointer;\n",
    "        }\n",
    "        .emoji {\n",
    "            position: absolute;\n",
    "            opacity: 0;\n",
    "            font-size: 24px;\n",
    "            transition: opacity 1s;\n",
    "            top: 100%; /* Place the emoji at the bottom of the question-box */\n",
    "            left: 50%;\n",
    "            transform: translateX(-50%);\n",
    "        }\n",
    "        .emoji.active {\n",
    "            opacity: 1;\n",
    "        }\n",
    "    </style>\n",
    "</head>\n",
    "<body>\n",
    "\n",
    "<div id=\"questions-container\"></div>\n",
    "<script>\n",
    "    const questions = [\n",
    "        \"Is the sky blue?\",\n",
    "        \"Is the Earth round?\",\n",
    "        \"Are you a human?\",\n",
    "        \"Do you like pizza?\",\n",
    "        \"Have you ever been to space?\",\n",
    "        \"Is the moon made of cheese?\",\n",
    "        \"Can you speak French?\",\n",
    "        \"Do you own a pet?\",\n",
    "        \"Have you traveled to Asia?\",\n",
    "        \"Is coding fun for you?\",\n",
    "        \"Do you enjoy solving puzzles?\",\n",
    "        \"Have you ever climbed a mountain?\",\n",
    "        \"Can you play a musical instrument?\",\n",
    "        \"Is pineapple an acceptable pizza topping?\",\n",
    "        \"Do you believe in ghosts?\",\n",
    "        \"Have you ever won a lottery?\",\n",
    "        \"Do you like rainy days?\",\n",
    "        \"Have you read a book this month?\",\n",
    "        \"Do you enjoy watching sports?\",\n",
    "        \"Is chocolate your favorite dessert?\",\n",
    "        // ... add more questions as needed\n",
    "    ];\n",
    "    // Expanded list of emoji options\n",
    "    const positiveEmojis = ['😃', '😎', '😇', '😅', '😂', '😍', '🥳', '🤣','👹','😛','😮','🥵','💀','🤡'];\n",
    "    const negativeEmojis = ['😞', '🤔', '🙄', '🤯', '💩','🤓','🤹'];\n",
    "    function getRandomQuestion() {\n",
    "        return questions.length > 0\n",
    "            ? questions.splice(Math.floor(Math.random() * questions.length), 1)[0]\n",
    "            : \"No more questions!\";\n",
    "    }\n",
    "    function getRandomEmoji(isPositive) {\n",
    "        const emojiList = isPositive ? positiveEmojis : negativeEmojis;\n",
    "        return emojiList[Math.floor(Math.random() * emojiList.length)];\n",
    "    }\n",
    "    function displayQuestion(question) {\n",
    "        const questionsContainer = document.getElementById('questions-container');\n",
    "        const questionBox = document.createElement('div');\n",
    "        questionBox.classList.add('question-box');\n",
    "        const isPositive = Math.random() < 0.5; // 50% chance for a positive question\n",
    "        const emoji = getRandomEmoji(isPositive);\n",
    "        questionBox.innerHTML = `\n",
    "            <p>${question}</p>\n",
    "            <div class=\"emoji\" id=\"emoji\">${emoji}</div>\n",
    "            <button onclick=\"answerQuestion(true, ${isPositive})\">Yes</button>\n",
    "            <button onclick=\"answerQuestion(false, ${!isPositive})\">No</button>\n",
    "        `;\n",
    "        questionsContainer.appendChild(questionBox);\n",
    "    }\n",
    "    function answerQuestion(isYes, isPositive) {\n",
    "        const emojiContainer = document.getElementById('emoji');\n",
    "        const emoji = isYes ? getRandomEmoji(true) : getRandomEmoji(false);\n",
    "        console.log(`User's response: ${isYes ? 'Yes' : 'No'} ${emoji}`);\n",
    "        emojiContainer.classList.add('active');\n",
    "        setTimeout(() => {\n",
    "            emojiContainer.classList.remove('active');\n",
    "            // Reload the page after a delay\n",
    "            setTimeout(() => {\n",
    "                location.reload();\n",
    "            }, 1000);\n",
    "        }, 1000);\n",
    "    }\n",
    "    function displayNextQuestion() {\n",
    "        const question = getRandomQuestion();\n",
    "        displayQuestion(question);\n",
    "    }\n",
    "    displayNextQuestion();\n",
    "</script>\n",
    "\n",
    "</body>\n",
    "</html>"
   ]
  }
